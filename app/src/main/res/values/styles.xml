<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item><!--主题色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item><!--状态栏颜色-->
        <item name="colorAccent">@color/colorAccent</item><!--辅助色-->
        <!--<item name="android:colorBackground">@color/colorBackground</item>&lt;!&ndash;背景色&ndash;&gt;-->
        <item name="android:textColor">@color/colorText</item><!--字体的颜色-->
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <!--沉浸状态栏-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>
        <!--ActionBarDrawerToggle设置颜色-->
        <item name="colorControlNormal">@color/textColorSecondary</item><!-- 默认状态状态设置底线颜色 --><!--控件的默认颜色-->

        <!-- 选择的底线颜色 -->
        <item name="colorControlActivated">@color/colorPrimary</item><!--选择的底线颜色-->

        <!--Button按钮正常状态颜色-->
        <item name="colorButtonNormal">@color/colorPrimary</item>

        <!--输入框字体颜色-->
        <item name="android:editTextColor">@color/colorEditText</item>
        <!--底部导航栏颜色-->
        <!--<item name="android:navigationBarColor">@color/colorTheme</item>-->
    </style>
<!--加载界面主题-->
